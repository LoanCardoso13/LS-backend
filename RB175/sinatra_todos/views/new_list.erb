<form action="/lists/new" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the name of your new list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= @list_name if session[:error] %>" \>
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save" \>
    <a href="/lists">Cancel</a>
  </fieldset>
</form>
