<section id="todos" class="<%= 'complete' if all_completed? @list %>">
  <header>
    <h2><%= @list_name %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/complete" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li> <a class="edit" href="/lists/<%= @list_id %>/edit">Edit List</a></li>
    </ul>
  </header>
    <% if @todos %>
      <ul >
        <% @todos.each_with_index do |todo, idx| %>
          <li class="<%= 'complete' if todo[:completed] %>">
            <form action="/lists/<%= @list_id %>/complete/<%= idx %>" method="post" class="check">
               <input type="hidden" name="completed" value="" />
               <button type="submit">Complete</button>
            </form>
            <h3><%= todo[:name] %></h3>
            <form action="/lists/<%= @list_id %>/delete/<%= idx %>" method="post" class="delete">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% end %>
      </ul>
    <% end %>
</section>

<form action="/lists/<%= @list_id %>" method="post">
  <dl>
    <dt>
      <label for="todo_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_name" placeholder="Todo Name" type="text" value="" \>
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save" \>
    <a href="/lists">Cancel</a>
  </fieldset>
</form>

<% content_for :header do %>
  <div class="actions"><a class="list" href="/lists">All Lists</a></div>
<% end %>
