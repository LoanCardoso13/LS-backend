<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/delete" class="delete" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list_id %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" type="text" value="<%= @list_name %>" \>
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save" \>
    <a href="/lists">Cancel</a>
  </fieldset>
</form>
